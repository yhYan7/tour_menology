<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_fragment_activity.pcOne">
    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_2"/>
    <TextView
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="50dp">
        <Button
            android:id="@+id/pinglun_btn1"
            android:layout_width="0dp"
            android:background="#6034bcec"
            android:layout_weight="1"
            android:text="活动"
            android:layout_height="match_parent"/>
        <Button

            android:id="@+id/pinglun_btn2"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="社区"
            android:layout_height="match_parent"/>
        <Button

            android:id="@+id/pinglun_btn3"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="游记"
            android:layout_height="match_parent"/>

    </LinearLayout>

<TextView
    android:background="#e5e5e5"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>


    <com.xiaosu.pulllayout.PullLayout
        android:id="@+id/my_huodongpinglun_pulllayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include2"
        >

        <ListView
            android:divider="#e5e5e5"
            android:dividerHeight="1dp"
            android:id="@+id/myhuodongpinglun_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </com.xiaosu.pulllayout.PullLayout>



    <ListView
        android:id="@+id/pinglun_list_shequ"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <ListView
        android:id="@+id/pinglun_list_youji"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
