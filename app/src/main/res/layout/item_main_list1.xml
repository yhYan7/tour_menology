<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/main_List1_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px"
            android:background="@mipmap/moren2"
            android:scaleType="fitXY"
            android:src="@mipmap/moren2"/>

        <TextView
            android:id="@+id/main_list1_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignTop="@+id/main_List1_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/main_List1_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14dp"
            android:text="2016上海桃花节"
            android:textColor="#333333"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/main_list1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/main_List1_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/main_List1_img"
            android:paddingLeft="2dp"
            android:text="2013.01.23"
            android:textColor="#666666"
            android:textSize="12dp"/>


        <TextView
            android:id="@+id/main_list1_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_list1_date"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_alignLeft="@+id/main_list1_date"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignStart="@+id/main_list1_date"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="山东省青岛市旅游局"
            android:textColor="#666666"
            android:textSize="12dp"
            android:top="@+id/main_list1_date"/>

        <TextView
            android:id="@+id/main_list1_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textColor="#666666"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_toLeftOf="@+id/main_list1_guanzhu"
            android:background="@mipmap/xing"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/right"/>
    </RelativeLayout>
</LinearLayout>