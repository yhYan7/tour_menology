<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhuye"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.tour_menology.Activity.zhuye">

    <include layout="@layout/toolbar_2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/bei">


        <com.example.administrator.tour_menology.date.CircleImageView
            android:id="@+id/zhuye_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/zhuye_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/zhuye_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/zhuye_img"
            android:text="名字长了效果不好"
            android:maxLength="7"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/zhuye_nan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/zhuye_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/zhuye_title"
            android:background="@mipmap/nan"/>

        <ImageView
            android:id="@+id/zhuye_nv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/zhuye_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/zhuye_title"
            android:background="@mipmap/nv"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/zhuye_img"
            android:text="积分: "
            android:textColor="#fff"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/zhuye_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/zhuye_img"
            android:text="10"
            android:textColor="#fff"
            android:textSize="16dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/zhuye_jifen"
            android:background="@drawable/yuanjiao_bai"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lv."
                android:textColor="#34bcec"/>

            <TextView
                android:id="@+id/zhuye_dengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="1"
                android:textColor="#34bcec"/>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zhuye_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/zhuye_img"
            android:text="城市: "
            android:textColor="#fff"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/zhuye_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zhuye_img"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/zhuye_img"
            android:text="未知"
            android:textColor="#fff"
            android:textSize="16dp"/>


        <Button
            android:id="@+id/zhuye_weiguanzhu"
            android:layout_width="80dp"

            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/denglu_button"
            android:text="+关注"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/zhuye_yiguanzhu"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/yuanjiao_hui"
            android:text="已关注"
            android:textColor="#000"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/zhuye_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="旅行信条:"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/zhuye_xintiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/zhuye_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="65dp"
            android:text="不一样的生活,不一样的旅行"
            android:textColor="#fff"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/bei2"
        android:weightSum="3">


        <RelativeLayout
            android:id="@+id/zhuye_r1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#80000000">


            <TextView
                android:id="@+id/zhuye_dingyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="3"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="订阅社区"
                android:textColor="#fff"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zhuye_r2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#80000000">


            <TextView
                android:id="@+id/zhuye_guanzhuren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="3"
                android:textColor="#fff"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="关注的人"
                android:textColor="#fff"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zhuye_r3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#80000000">


            <TextView
                android:id="@+id/zhuye_fensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="3"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="TA的粉丝"
                android:textColor="#fff"/>
        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5">

        <Button

            android:id="@+id/zhuye_youji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#6034bcec"
            android:text="TA的游记"/>

        <Button
            android:id="@+id/zhuye_xihuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#fff"
            android:text="TA喜欢的"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/zhuye_dian"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/shudian"/>
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ListView
        android:id="@+id/zhuye_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </ListView>

    <GridView
        android:id="@+id/zhuye_gridview"
        android:layout_width="match_parent"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:layout_height="match_parent"
        android:visibility="gone">

    </GridView>


</LinearLayout>
