<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.administrator.tour_menology.Fragment.fabu_pinglun_Fragment">

    <EditText
        android:id="@+id/pinglun_zhaohuodong_edit"
        android:background="@drawable/edxt"
        android:hint="请输入您要评论的内容"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@null"
        android:inputType="textMultiLine"
        android:enabled="true"
        android:gravity="top"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="限140字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"/>

        <Button
            android:id="@+id/zhaohuodong_pinglun_fabu"
            android:background="@drawable/denglu_yanzheng"
            android:text="发表"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"/>

    </RelativeLayout>

    <TextView
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="全部评论"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/zhaohuodong_pinglun_text"
            android:text="暂无评论"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/zhaohuodong_pinglun_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


    </RelativeLayout>
</LinearLayout>
