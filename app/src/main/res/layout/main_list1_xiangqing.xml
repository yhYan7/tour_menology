<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar_2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:background="@mipmap/moren2"
                    android:id="@+id/main_list_top_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:layout_alignBottom="@+id/main_list_top_img"
                    android:layout_alignParentEnd="true"
                    android:background="#60000000">

                    <TextView
                        android:id="@+id/shouc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15px"
                        android:text="已收藏:"
                        android:textColor="#fff"/>

                    <TextView
                        android:id="@+id/main_list1_xiangqing_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/shouc"
                        android:text="0"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/main_list1_xiangqing_shoucang"
                        android:text="次"
                        android:textColor="#fff"/>
                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px">

                <TextView
                    android:id="@+id/main_list1_xiangqing_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:text="2016上海南汇桃花节"
                    android:textColor="#333333"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/date"/>

                <TextView
                    android:id="@+id/main_list1_xiangqing_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:text="2016.16.16"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/address"/>

                <TextView

                    android:id="@+id/main_list1_xiangqing_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:text="上海南汇桃花村"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:id="@+id/huodong_call"
                android:layout_width="match_parent"
                android:layout_height="100px">

                <ImageView
                    android:id="@+id/main_list1_xiangqing_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/call"/>

                <TextView
                    android:id="@+id/main_list1_xiangqing_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:text="021-58000123123"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>


            <RelativeLayout
                android:id="@+id/fabufang_R"
                android:layout_width="match_parent"
                android:layout_height="116px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <ImageView
                    android:id="@+id/main_list_bottom_img"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    />

                <TextView
                    android:id="@+id/main_list1_xiangqing_laiyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="140px"
                    android:text="上海市旅游局"
                    android:textColor="#333333"
                    android:textStyle="bold"/>


                <ImageView
                    android:layout_width="10px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/right"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>


            <TextView
                android:id="@+id/main_list1_xiangqing_xiangqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginTop="30px"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5"/>

            <Button
                android:id="@+id/btn_chakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="查看详情"
                android:textColor="#34bcec"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"/>

            <TextView
                android:layout_width="166px"
                android:layout_height="wrap_content"
                android:background="@drawable/jiao_lanse"
                android:paddingLeft="30px"
                android:paddingTop="9dp"
                android:text="评论"
                android:textColor="#fff"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pinglun_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="暂无评论"/>

                <ListView
                    android:id="@+id/list_pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:divider="#e5e5e5"
                    android:dividerHeight="1px">

                </ListView>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"/>

            <Button
                android:id="@+id/btn_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="更多评论"
                android:textColor="#34bcec"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e5e5e5"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100px">


                <Button
                    android:id="@+id/main_list1_xiangguan"
                    android:text="相关活动"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:background="#e5e5e5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/main_list1_zhoubian"
                    android:text="周边产品"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5"/>


            <ListView
                android:id="@+id/more_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#e5e5e5"
                android:dividerHeight="2px">

            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <!--已收藏-->
                <RelativeLayout
                    android:id="@+id/yishoucang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/textView14"
                        android:layout_toStartOf="@+id/textView14"
                        android:background="@mipmap/shoucang_yi"/>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="已收藏"
                        android:textColor="#999999"
                        />
                </RelativeLayout>

                <!--添加收藏-->
                <RelativeLayout
                    android:id="@+id/weishoucang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/textView13"
                        android:layout_toStartOf="@+id/textView13"
                        android:background="@mipmap/shoucang_kong"/>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="添加收藏"
                        android:textColor="#999999"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/weidaoru"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="#ff5500">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/textView15"
                        android:layout_toStartOf="@+id/textView15"
                        android:background="@mipmap/daoru"/>

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="一键导入日历"
                        android:textColor="#fff"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/yidaoru"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="#ff5500">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/te1"
                        android:layout_toStartOf="@+id/te1"
                        android:background="@mipmap/daoru"/>

                    <TextView
                        android:id="@+id/te1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="已导入日历"
                        android:textColor="#fff"/>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>