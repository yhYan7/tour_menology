<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/datee"/>

    <TextView
        android:id="@+id/item_rili_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_tour_title"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:text="全天"
        android:textSize="28px"/>
    <TextView
        android:id="@+id/item_rili_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_tour_title"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_rili_date"
        android:layout_toRightOf="@+id/item_rili_date"
        android:text="--"
        android:textSize="28px"/>


    <TextView
        android:id="@+id/item_rili_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_tour_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_rili_date1"
        android:text="sdfsdf"
        android:textSize="28px"/>

    <TextView
        android:id="@+id/item_rili_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_rili_date2"
        android:ellipsize="end"
        android:maxLength="10"
        android:text="vsdsdfsdfsdfsdfsdfsdffg"
        android:textSize="28px"/>


    <ImageView
        android:id="@+id/item_rili_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"/>

</RelativeLayout>