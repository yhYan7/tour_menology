<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/main_fabufang_img"
        android:layout_width="180px"
        android:layout_height="166px"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25px"
        android:src="@mipmap/moren"
        android:layout_marginTop="25px"
        />


    <TextView
        android:id="@+id/main_fabu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_fabufang_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/main_fabufang_img"
        android:text="山东省旅游局"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_fabufang_img"
        android:layout_alignLeft="@+id/main_fabu_title"
        android:layout_alignStart="@+id/main_fabu_title"
        android:text="订阅:"
        android:textColor="#666666"/>


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:text="已发布活动:"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/main_fabu_fabucs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView14"
        android:layout_toRightOf="@+id/textView15"
        android:textColor="#666666"
        />

    <TextView
        android:id="@+id/main_fabu_guanzhucs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_toEndOf="@+id/textView14"
        android:layout_toRightOf="@+id/textView14"
        android:textColor="#666666"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@mipmap/right"/>


</RelativeLayout>