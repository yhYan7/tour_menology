<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.tour_menology.Activity.gonglue_xiangqing">


    <include layout="@layout/toolbar_2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gonglue_img"/>
    <TextView

        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:text="近代历史文化一日游"
        android:layout_height="wrap_content"
        android:id="@+id/gonglue_title"
        android:layout_above="@+id/gonglue_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/gonglue_date"
        android:text="2016-9-8"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gonglue_img"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:text="|"
        android:layout_toRightOf="@+id/gonglue_date"
        android:layout_alignTop="@+id/gonglue_date"
        android:layout_marginLeft="3dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/gonglue_date2"
        android:text="一"
        android:layout_toRightOf="@+id/gonglue_date"
        android:layout_alignTop="@+id/gonglue_date"
        android:layout_marginLeft="8dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="天 |"
        android:layout_toRightOf="@+id/gonglue_date2"
        android:layout_alignTop="@+id/gonglue_date2"
        android:layout_marginLeft="3dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/gonglue_address"
        android:text="天津市"
        android:layout_toRightOf="@+id/gonglue_date2"
        android:layout_alignTop="@+id/gonglue_date2"
        android:layout_marginLeft="28dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    </RelativeLayout>

    <WebView
        android:id="@+id/gonglue_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </WebView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
