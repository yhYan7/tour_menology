<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:layout_centerVertical="true"
        android:background="@mipmap/datee"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"/>
    
   <TextView
       android:text="全天"
       android:textSize="28px"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_alignTop="@+id/item_tour_title"
       android:layout_toRightOf="@+id/imageView4"
       android:layout_toEndOf="@+id/imageView4"
       android:id="@+id/item_tour_date"/>
    
    <TextView
        android:text="vsdfg"
        android:id="@+id/item_tour_title"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:maxLength="17"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_tour_date"
        android:layout_toEndOf="@+id/item_tour_date"/>
    
    
    <ImageView
        android:layout_marginRight="5dp"
        android:id="@+id/item_tour_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>