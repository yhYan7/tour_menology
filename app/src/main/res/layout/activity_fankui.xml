<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.example.administrator.tour_menology.my_fragment_activity.fankui">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="490px"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/fankui_t1"
                    android:layout_width="match_parent"
                    android:layout_height="490px"
                    android:gravity="top"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:hint="请在此处留下您宝贵的疑问与反馈，我们将不断改进，谢谢！"
                    android:background="#ffffff"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColor="#999999"
                    android:padding="15dp"
                    android:textSize="13dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1px"
                    android:background="#e5e5e5"/>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginTop="15dp"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/fankui_t2"
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="您的邮箱或手机号"
                    android:paddingTop="10dp"
                    android:inputType="textPassword"
                    android:background="#ffffff"
                    android:textColor="#999999"
                    android:padding="15dp"
                    android:textSize="13dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/fankui_confrim"
                android:background="@drawable/denglu_yanzheng"
                android:layout_marginTop="45dp"
                android:textColor="#fff"
                android:textSize="15dp"
                android:text="提交"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
