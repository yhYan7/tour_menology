<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mydongtai_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/moren"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/mydongtai_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mydongtai_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/mydongtai_img"
        android:text="XXXX"
        android:textSize="14dp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/mydongtai_huodongname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mydongtai_img"
        android:layout_alignLeft="@+id/mydongtai_nickname"
        android:layout_alignStart="@+id/mydongtai_nickname"
        android:text="XXXX"
        android:textSize="12dp"
        android:textColor="#666666"/>


    <TextView
        android:id="@+id/mydongtai_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:text="XXX"
        />


</RelativeLayout>