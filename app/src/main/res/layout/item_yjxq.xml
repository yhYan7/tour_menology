<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="10dp"
              android:descendantFocusability="blocksDescendants"
              android:layout_marginRight="10dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_xq_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ImageView>

    <TextView
        android:id="@+id/grid_xq_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/grid_xq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/address_yj"/>

        <TextView
            android:id="@+id/grid_xq_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:text="天津市"/>

        <ImageButton
            android:id="@+id/grid_xq_pinlun"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/pinlun"/>

        <ImageButton
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/love_k"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/grid_xq_love_k"/>

        <ImageButton
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/love_shi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/grid_xq_love_s"/>

        <TextView
            android:text="22"
            android:id="@+id/grid_xq_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>
</LinearLayout>