<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="90dp">
    <com.example.administrator.tour_menology.date.CircleImageView
        android:layout_width="50dp"
        android:id="@+id/item_haoyou_img"
        android:layout_margin="20dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/item_haoyou_name"
        android:layout_marginLeft="100dp"
        android:textColor="#333333"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:text="风气云飞扬"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_haoyou_right"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/right"
        android:layout_width="10dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/item_haoyou_deng"
        android:text="等待验证"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/item_haoyou_tongyi"
        android:text="同意"
        android:textColor="#fff"
        android:background="#34bcec"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>