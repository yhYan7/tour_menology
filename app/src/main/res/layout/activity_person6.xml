<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.administrator.tour_menology.my_fragment_activity.person6">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_2"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/p6_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="原密码"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="#ffffff"
                    android:textColor="#999999"
                    android:textSize="15dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1px"
                    android:background="#e5e5e5"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/p6_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="新密码"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="#ffffff"
                    android:textColor="#999999"
                    android:textSize="15dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1px"
                    android:background="#e5e5e5"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/p6_againpwd"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="确认新密码"
                    android:background="#ffffff"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColor="#999999"
                    android:textSize="15dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1px"
                    android:background="#e5e5e5"/>
            </RelativeLayout>

            <Button
                android:id="@+id/p6_confrim"
                android:background="@drawable/denglu_yanzheng"
                android:layout_marginTop="30dp"
                android:textColor="#fff"
                android:textSize="15dp"
                android:text="确定"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
