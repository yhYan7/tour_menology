<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.tour_menology.Activity.main_fabufang">

    <include layout="@layout/toolbar_2"/>

    <RelativeLayout
        android:id="@+id/ry1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_fabu_menu"
            android:layout_width="90dp"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/down"
            android:gravity="center"
            android:text="类型"
            android:textColor="#666666"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#e5e5e5"/>

    <com.xiaosu.pulllayout.PullLayout
        android:id="@+id/main_fabu_palllayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:divider="#e5e5e5">

        <ListView
            android:id="@+id/main_fabu_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.xiaosu.pulllayout.PullLayout>
</LinearLayout>
